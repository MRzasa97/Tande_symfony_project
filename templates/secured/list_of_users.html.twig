{# templates/list_of_users.html.twig #}

{% extends 'base.html.twig' %}

{% block title %}List of Users{% endblock %}

{% block body %}
    <h1>List of Users</h1>

    {% if users is not empty %}
        <table>
            <thead>
                <tr>
                    <th>Name</th>
                    <th>Surname</th>
                    <th>Image</th>
                </tr>
            </thead>
            <tbody>
                {% for user in users %}
                    <tr>
                        <td>{{ user.name }}</td>
                        <td>{{ user.surname }}</td>
                        <td>
                            <img src="data:image/png;base64,{{ user.getBase64File() }}" alt="User Image" width="200" height="200">
                        </td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>
            {# Display pagination links #}
    <div class="pagination">
        {% for page in 1..totalPages %}
            <a href="{{ path('list_of_users', {'page': page}) }}">{{ page }}</a>
        {% endfor %}
    </div>
    {% else %}
        <p>No users found.</p>
    {% endif %}
{% endblock %}